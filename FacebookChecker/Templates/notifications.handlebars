{{#each this}}
<a id="{{id}}" href="{{url}}" class="openable list-group-item {{checkNew state}}">
    <div class="row">
        <div class="col-xs-2">
            {{renderPicture authors}}
        </div>
        
        <div class="{{#if attachment}}col-xs-7{{else}}col-xs-10{{/if}}">
            <div class="primary-text">
                {{emphasize this}}
            </div>
            <div class="secondary-text">
                <img class="icon" src="{{icon}}" alt="" />
                <span>{{timestamp}}</span>
            </div>
        </div>
        {{#if attachment}}
        <div class="col-xs-3">
            <img src="{{attachment}}" class="attachment" alt="" />
        </div>
        {{/if}}
        <div class="read-button-container">
            <div title="Read" class="read-button" data-read-info="{{serializeReadInfo this}}" style="display:none;"></div>
        </div>
    </div>
</a>
{{else}}
<div class="row list-group-item">
    <div class="col-xs-12">
        <span class="center-block">No notifications found</span>
    </div>
</div>
{{/each}}