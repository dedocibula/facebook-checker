{
    "name": "Facebook Checker by DedoCibula",
    "version": "2.3",
    "manifest_version": 2,
    "description": "Keep up with your friends, even when you're not on Facebook.",
    "browser_action": {
        "default_icon": "images/icon-loggedout.png",
        "default_title": "Facebook Checker",
        "default_popup": "popup.html"
    },
    "background": {
        "scripts": [ "Scripts/jquery-3.1.0.min.js", "entities.js", "extensions.js", "background.js" ]
    },
    "permissions": [ "http://*.facebook.com/*", "https://*.facebook.com/*", "webRequest", "webRequestBlocking", "notifications", "tabs" ],
    "icons": {
        "128": "Images/icon128.png",
        "16": "Images/icon16.png",
        "32": "Images/icon32.png",
        "48": "Images/icon48.png"
    }
}
