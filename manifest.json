{
   "name": "Facebook Notifications by DedoCibula",
   "version": "1.1",
   "manifest_version": 2,
   "description": "Keep up with your friends, even when you're not on Facebook.",
   "browser_action": {
      "default_icon": "images/icon19.png",
      "default_popup": "popup.html",
      "default_title": "Facebook Notifications"
   },
   "background": {
      "page": "background.html"
   },
   "icons": {
      "128": "images/icon128.png",
      "16": "images/icon16.png",
      "32": "images/icon32.png",
      "48": "images/icon48.png"
   },
   "content_scripts": [
      {
         "matches": [ "https://*.facebook.com/desktop_notifications/popup.php*" ],
         "js": [ "js/myhack.js" ],
         "css": [ "style.css" ],
         "all_frames": true
      }
   ],
   "options_page": "options.html",
   "permissions": [ "http://*.facebook.com/*", "https://*.facebook.com/*", "notifications", "chrome://favicon/", "webRequest", "webRequestBlocking" ]
}
